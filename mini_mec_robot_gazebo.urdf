<?xml version="1.0" ?>
<robot name="wheeltec_robot">

    <!-- ==================== BASE LINK ==================== -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://movement_pkg/meshes/base_link.STL"/>
            </geometry>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0.27 0.20 0.10"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <mass value="2.0"/>
            <inertia ixx="0.005108" ixy="0" ixz="0"
                     iyy="0.012967" iyz="0"
                     izz="0.016408"/>
        </inertial>
    </link>

    <!-- ==================== LEFT FRONT WHEEL (PASSIVE) ==================== -->
    <joint name="lf_wheel_joint" type="continuous">
        <origin xyz="0.0789 0.0991 -0.0363" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="lf_wheel_link"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="lf_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://movement_pkg/meshes/lf_wheel_link.STL"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0000533" ixy="0" ixz="0"
                     iyy="0.0000533" iyz="0"
                     izz="0.00008"/>
        </inertial>
    </link>

    <!-- ==================== LEFT BACK WHEEL (DRIVE) ==================== -->
    <joint name="lb_wheel_joint" type="continuous">
        <origin xyz="-0.0930 0.0991 -0.0363" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="lb_wheel_link"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="lb_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://movement_pkg/meshes/lb_wheel_link.STL"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0000533" ixy="0" ixz="0"
                     iyy="0.0000533" iyz="0"
                     izz="0.00008"/>
        </inertial>
    </link>

    <!-- ==================== RIGHT BACK WHEEL (DRIVE) ==================== -->
    <joint name="rb_wheel_joint" type="continuous">
        <origin xyz="-0.0930 -0.0989 -0.0363" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="rb_wheel_link"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="rb_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://movement_pkg/meshes/rb_wheel_link.STL"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0000533" ixy="0" ixz="0"
                     iyy="0.0000533" iyz="0"
                     izz="0.00008"/>
        </inertial>
    </link>

    <!-- ==================== RIGHT FRONT WHEEL (PASSIVE) ==================== -->
    <joint name="rf_wheel_joint" type="continuous">
        <origin xyz="0.0789 -0.0989 -0.0363" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="rf_wheel_link"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="rf_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://movement_pkg/meshes/rf_wheel_link.STL"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0000533" ixy="0" ixz="0"
                     iyy="0.0000533" iyz="0"
                     izz="0.00008"/>
        </inertial>
    </link>

    <!-- ==================== LASER LINK ==================== -->
    <joint name="laser_joint" type="fixed">
        <origin xyz="0.0316 0.0001 0.0950" rpy="0 0 3.14159"/>
        <parent link="base_link"/>
        <child link="laser_link"/>
    </joint>

    <link name="laser_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://movement_pkg/meshes/laser.STL"/>
            </geometry>
            <material name="dark_grey">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.00001292" ixy="0" ixz="0"
                     iyy="0.00001292" iyz="0"
                     izz="0.0000225"/>
        </inertial>
    </link>

    <!-- ==================== CONTROLLER LINK (fixed decoration) ==================== -->
    <joint name="controller_joint" type="fixed">
        <origin xyz="-0.0556 -0.0408 0.0520" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="controller_link"/>
    </joint>

    <link name="controller_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://movement_pkg/meshes/controller_link.STL"/>
            </geometry>
            <material name="blue">
                <color rgba="0.2 0.2 0.8 1"/>
            </material>
        </visual>
    </link>

    <!-- ==================== CAMERA LINK (fixed decoration) ==================== -->
    <joint name="camera_joint" type="fixed">
        <origin xyz="0.1071 0.0003 0.0762" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="camera_link"/>
    </joint>

    <link name="camera_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://movement_pkg/meshes/camera_link.STL"/>
            </geometry>
            <material name="dark_grey">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
    </link>

    <!-- ==================== GAZEBO MATERIAL COLORS ==================== -->
    <gazebo reference="base_link">
        <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="lf_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="lb_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="rf_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="rb_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="laser_link">
        <material>Gazebo/DarkGrey</material>
    </gazebo>
    <gazebo reference="controller_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- Front wheels: low friction (passive/caster behavior) -->
    <gazebo reference="lf_wheel_link">
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
    </gazebo>
    <gazebo reference="rf_wheel_link">
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
    </gazebo>

    <!-- Rear drive wheels: normal friction -->
    <gazebo reference="lb_wheel_link">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
    </gazebo>
    <gazebo reference="rb_wheel_link">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
    </gazebo>

    <!-- ==================== DIFF DRIVE PLUGIN ==================== -->
    <gazebo>
        <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <ros>
                <namespace>/</namespace>
            </ros>

            <left_joint>lb_wheel_joint</left_joint>
            <right_joint>rb_wheel_joint</right_joint>

            <wheel_separation>0.1980</wheel_separation>
            <wheel_diameter>0.08</wheel_diameter>

            <max_wheel_torque>5.0</max_wheel_torque>
            <max_wheel_acceleration>2.0</max_wheel_acceleration>

            <command_topic>cmd_vel</command_topic>
            <odometry_topic>odom</odometry_topic>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>

            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

            <update_rate>50.0</update_rate>
            <cmdVelTimeout>0.5</cmdVelTimeout>
        </plugin>
    </gazebo>

    <!-- ==================== LIDAR SENSOR PLUGIN ==================== -->
    <gazebo reference="laser_link">
        <sensor name="lidar_sensor" type="ray">
            <always_on>true</always_on>
            <visualize>true</visualize>
            <update_rate>10.0</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1</resolution>
                        <min_angle>-3.14159265</min_angle>
                        <max_angle>3.14159265</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.12</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.005</stddev>
                </noise>
            </ray>
            <plugin name="lidar_plugin" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <namespace>/</namespace>
                    <remapping>~/out:=scan</remapping>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>laser_link</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>
